{
  "name": "@modernpoacher/modernpoacher",
  "version": "0.0.9",
  "description": "@ModernPoacher/modernpoacher",
  "author": "Jonathan Perry @ Modern Poacher Limited",
  "private": true,
  "scripts": {
    "build:css:clean": "cross-env NODE_ENV=production gulp build:css:clean",
    "build:css": "cross-env NODE_ENV=production gulp build:css",
    "build:css:watch": "cross-env NODE_ENV=production gulp build:css:watch",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "lint:js": "cross-env NODE_ENV=production eslint *.js build",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "cross-env NODE_ENV=production stylelint src/sass",
    "lint:css:fix": "npm run lint:css -- --fix",
    "pre-commit": "npm run lint && npm run build:css && git add pub"
  },
  "dependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "@babel/register": "^7.7.4",
    "babel-plugin-module-resolver": "^4.0.0",
    "core-js": "^3.5.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.3",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "cross-env": "^6.0.3",
    "cssnano": "^4.1.10",
    "del": "^5.1.0",
    "eslint": "^6.7.2",
    "eslint-config-standard": "^14.1.0",
    "eslint-import-resolver-babel-module": "^5.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.2.0",
    "gulp-css-purge": "^3.0.9",
    "gulp-debug": "^4.0.0",
    "gulp-postcss": "^8.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "husky": "^3.1.0",
    "module-alias": "^2.2.2",
    "postcss-scss": "^2.0.0",
    "stylelint": "^12.0.0",
    "stylelint-config-recommended-scss": "^4.1.0",
    "stylelint-scss": "^3.13.0",
    "vinyl-paths": "^3.0.1"
  },
  "_moduleAliases": {
    "build": "./build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  }
}
